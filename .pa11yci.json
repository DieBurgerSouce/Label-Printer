      "screenCapture": "./pa11y-reports/labels.png"
    },
    {
      "url": "http://localhost:3001/articles",
      "screenCapture": "./pa11y-reports/articles.png"
    },
    {
      "url": "http://localhost:3001/templates",
      "screenCapture": "./pa11y-reports/templates.png"
    },
    {
      "url": "http://localhost:3001/automation",
      "screenCapture": "./pa11y-reports/automation.png"
    }
  ]
