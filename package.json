{
  "name": "screenshot-scraper",
  "version": "1.0.0",
  "description": "Production-ready screenshot scraper for shop.firmenich.de (Shopware 6)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "worker": "tsx src/workers/screenshot-worker.ts",
    "api": "tsx src/api/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "screenshot",
    "scraper",
    "playwright",
    "shopware",
    "bullmq"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@bull-board/api": "^6.3.1",
    "@bull-board/express": "^6.3.1",
    "@bull-board/ui": "^6.3.1",
    "@playwright/test": "^1.48.2",
    "@types/pdfkit": "^0.17.3",
    "axios": "^1.7.9",
    "bullmq": "^5.28.1",
    "cheerio": "^1.1.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-xml-parser": "^4.5.2",
    "fs-extra": "^11.2.0",
    "ioredis": "^5.4.2",
    "md5": "^2.3.0",
    "multer": "^2.0.2",
    "p-limit": "^6.1.0",
    "pdfkit": "^0.17.2",
    "sharp": "^0.33.5",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/md5": "^2.3.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
