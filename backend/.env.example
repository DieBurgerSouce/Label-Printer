# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# SUPABASE DATABASE
# ============================================
# Get these from: https://supabase.com/dashboard/project/YOUR-PROJECT/settings/database

# Direct Connection (for migrations, local development)
# Format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres.YOUR-PROJECT-REF:YOUR-PASSWORD@db.YOUR-PROJECT-REF.supabase.co:5432/postgres"

# Pooler Connection (for production, recommended)
# Format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true
# DATABASE_URL_POOLER="postgresql://postgres.YOUR-PROJECT-REF:YOUR-PASSWORD@aws-0-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Supabase Project URL
# Format: https://YOUR-PROJECT-REF.supabase.co
SUPABASE_URL="https://YOUR-PROJECT-REF.supabase.co"

# Supabase API Keys
# Get from: Settings → API → Project API keys
SUPABASE_ANON_KEY="YOUR-ANON-KEY"
SUPABASE_SERVICE_ROLE_KEY="YOUR-SERVICE-ROLE-KEY"

# ============================================
# IMAGEKIT CDN
# ============================================
# Get these from: https://imagekit.io/dashboard/developer/api-keys

IMAGEKIT_PUBLIC_KEY="your_public_key"
IMAGEKIT_PRIVATE_KEY="your_private_key"
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your_imagekit_id"

# ============================================
# STORAGE CONFIGURATION
# ============================================
# Local storage paths (fallback when ImageKit not available)

STORAGE_PATH="./storage"
SCREENSHOTS_PATH="./storage/screenshots"
THUMBNAILS_PATH="./storage/thumbnails"
LABELS_PATH="./storage/labels"
TEMP_PATH="./storage/temp"

# ============================================
# OPTIONAL: OCR CONFIGURATION
# ============================================
# OCR_ENGINE="tesseract"  # or "google-vision", "aws-textract"
# OCR_LANGUAGE="deu"      # German
# OCR_WORKERS=4           # Parallel OCR workers

# ============================================
# OPTIONAL: CRAWLER CONFIGURATION
# ============================================
# CRAWLER_TIMEOUT=30000           # 30 seconds
# CRAWLER_MAX_CONCURRENT=5        # Max concurrent pages
# CRAWLER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# ============================================
# OPTIONAL: WEBSOCKET CONFIGURATION
# ============================================
# WS_HEARTBEAT_INTERVAL=30000     # 30 seconds
# WS_CONNECTION_TIMEOUT=60000     # 60 seconds

# ============================================
# NOTES:
# ============================================
# 1. Never commit the actual .env file!
# 2. For production, use DATABASE_URL_POOLER (Port 6543)
# 3. For migrations, always use DATABASE_URL (Port 5432)
# 4. Keep SUPABASE_SERVICE_ROLE_KEY secret!
# 5. ImageKit is optional - local storage works as fallback
