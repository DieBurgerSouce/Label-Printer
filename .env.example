# Application
NODE_ENV=development
APP_PORT=3000

# Target Shop
SHOP_URL=https://shop.firmenich.de
SHOP_SITEMAP_URL=https://shop.firmenich.de/sitemap.xml

# Shopware 6 API (optional)
SHOPWARE_API_URL=https://shop.firmenich.de/store-api
SHOPWARE_API_KEY=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Screenshot Configuration
SCREENSHOT_WIDTH=1920
SCREENSHOT_HEIGHT=1080
SCREENSHOT_DEVICE_SCALE_FACTOR=2
SCREENSHOT_TIMEOUT=30000
SCREENSHOT_WAIT_AFTER_LOAD=1000

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_POOL_MIN=3
BROWSER_POOL_MAX=12
BROWSER_RECYCLE_AFTER=100

# Queue Configuration
QUEUE_CONCURRENCY=8
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=2000
QUEUE_RATE_LIMIT_MAX=10
QUEUE_RATE_LIMIT_DURATION=1000

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./screenshots
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=
STORAGE_S3_ENDPOINT=

# CloudFlare R2 (alternative to S3)
STORAGE_R2_ACCOUNT_ID=
STORAGE_R2_ACCESS_KEY=
STORAGE_R2_SECRET_KEY=
STORAGE_R2_BUCKET=

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=86400
CACHE_CONTENT_HASH=true

# Monitoring
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Bull Board (Queue Monitoring UI)
BULL_BOARD_ENABLED=true
BULL_BOARD_PORT=3001
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=

# Database (for metadata)
DATABASE_TYPE=sqlite
DATABASE_PATH=./metadata.sqlite
DATABASE_POSTGRES_HOST=
DATABASE_POSTGRES_PORT=5432
DATABASE_POSTGRES_USER=
DATABASE_POSTGRES_PASSWORD=
DATABASE_POSTGRES_DATABASE=

# Advanced Features
ENABLE_AUTO_SCROLL=true
ENABLE_LAZY_LOADING_FIX=true
DISABLE_ANIMATIONS=true
CHUNKED_SCREENSHOT_THRESHOLD=6000
