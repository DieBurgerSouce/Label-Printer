# ==================================
# Screenshot Algo - Environment Configuration
# ==================================
# Kopieren Sie diese Datei zu .env und passen Sie die Werte an

# ==================================
# Datenbank Konfiguration
# ==================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=screenshot_algo

# Database URL (wird automatisch von docker-compose verwendet)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/screenshot_algo?schema=public

# ==================================
# Anwendungs-Einstellungen
# ==================================
NODE_ENV=production
PORT=3001

# ==================================
# Redis Konfiguration
# ==================================
REDIS_HOST=redis
REDIS_PORT=6379
# SECURITY: REQUIRED - Generate with: openssl rand -base64 32
# Min 32 characters, no default allowed in production!
REDIS_PASSWORD=

# ==================================
# Session & Sicherheit
# ==================================
# SECURITY: REQUIRED - Generate with: openssl rand -base64 64
# Min 64 characters, no default allowed in production!
SESSION_SECRET=

# ==================================
# Error Tracking (Sentry)
# ==================================
# SECURITY: REQUIRED in production for error monitoring
# Get your DSN from https://sentry.io
SENTRY_DSN=

# ==================================
# CORS Einstellungen
# ==================================
CORS_ORIGINS=http://localhost:3001,http://localhost:5173

# ==================================
# Externe Services (Optional)
# ==================================
# ImageKit (für Cloud-Speicherung von Bildern - optional)
# IMAGEKIT_PUBLIC_KEY=your_public_key
# IMAGEKIT_PRIVATE_KEY=your_private_key
# IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_id

# Supabase (Falls Sie Supabase statt lokaler DB nutzen möchten - optional)
# SUPABASE_URL=your_supabase_url
# SUPABASE_ANON_KEY=your_supabase_anon_key

# ==================================
# OpenTelemetry / Tracing
# ==================================
# Set to 'false' to disable tracing
OTEL_TRACING_ENABLED=true
# OpenTelemetry Collector endpoint
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# Service name for traces
OTEL_SERVICE_NAME=screenshot-algo-backend

# ==================================
# Monitoring / Alerting
# ==================================
# SMTP configuration for AlertManager email notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_FROM=alerts@screenshot-algo.local
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=admin@example.com

# Grafana credentials - SECURITY: REQUIRED, no defaults allowed!
GRAFANA_USER=
GRAFANA_PASSWORD=

# ==================================
# Entwicklungs-Einstellungen
# ==================================
# Diese Einstellungen sind nur für Entwicklung relevant
# DEBUG=false
# LOG_LEVEL=info
