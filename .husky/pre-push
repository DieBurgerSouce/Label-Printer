#!/bin/bash
# Git Pre-Push Hook - Screenshot_Algo
# Runs tests before allowing push to remote

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${YELLOW}üß™ Running pre-push checks...${NC}\n"

# Check if we're in the repo root
if [ ! -f "package.json" ]; then
    echo -e "${RED}‚ùå Error: Must be in repository root${NC}"
    exit 1
fi

# Get the branch being pushed
current_branch=$(git symbolic-ref --short HEAD)
echo -e "${YELLOW}Branch: ${current_branch}${NC}\n"

# Skip checks for specific branches (optional)
SKIP_BRANCHES=("docs" "documentation")
for branch in "${SKIP_BRANCHES[@]}"; do
    if [ "$current_branch" = "$branch" ]; then
        echo -e "${YELLOW}‚è≠Ô∏è  Skipping tests for branch: $branch${NC}"
        exit 0
    fi
done

# 1. Run linting first (fast check)
echo -e "${YELLOW}1. Quick lint check...${NC}"
if ! npm run lint --silent 2>/dev/null; then
    echo -e "${RED}‚ùå Linting failed!${NC}"
    echo -e "${YELLOW}üí° Run: npm run lint:fix${NC}"
    exit 1
fi
echo -e "${GREEN}‚úÖ Linting passed${NC}\n"

# 2. Run type checking
echo -e "${YELLOW}2. Type checking...${NC}"
if ! npx tsc --noEmit 2>/dev/null; then
    echo -e "${RED}‚ùå Type checking failed!${NC}"
    echo -e "${YELLOW}üí° Fix type errors before pushing${NC}"
    exit 1
fi
echo -e "${GREEN}‚úÖ Type checking passed${NC}\n"

# 3. Run unit tests
echo -e "${YELLOW}3. Running unit tests...${NC}"
if ! npm test --silent 2>/dev/null; then
    echo -e "${RED}‚ùå Unit tests failed!${NC}"
    echo -e "${YELLOW}üí° Fix failing tests before pushing${NC}"
    exit 1
fi
echo -e "${GREEN}‚úÖ Unit tests passed${NC}\n"

# 4. Check for unresolved merge conflicts
echo -e "${YELLOW}4. Checking for merge conflicts...${NC}"
if git diff --cached --name-only | xargs grep -l "^<<<<<<< " 2>/dev/null; then
    echo -e "${RED}‚ùå Unresolved merge conflicts found!${NC}"
    echo -e "${YELLOW}üí° Resolve conflicts before pushing${NC}"
    exit 1
fi
echo -e "${GREEN}‚úÖ No merge conflicts${NC}\n"

# 5. Check for large files
echo -e "${YELLOW}5. Checking for large files...${NC}"
MAX_SIZE=10485760  # 10MB in bytes
large_files=$(git diff --cached --name-only | while read file; do
    if [ -f "$file" ]; then
        size=$(wc -c < "$file" 2>/dev/null || echo "0")
        if [ "$size" -gt "$MAX_SIZE" ]; then
            echo "$file ($(($size / 1024 / 1024))MB)"
        fi
    fi
done)

if [ -n "$large_files" ]; then
    echo -e "${RED}‚ùå Large files detected:${NC}"
    echo "$large_files" | sed 's/^/  - /'
    echo -e "${YELLOW}üí° Consider using Git LFS for large files${NC}"
    exit 1
fi
echo -e "${GREEN}‚úÖ No large files${NC}\n"

# 6. Protect main/master branch
if [ "$current_branch" = "main" ] || [ "$current_branch" = "master" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Pushing to $current_branch${NC}"
    echo -e "${YELLOW}Are you sure? This should usually be done via PR.${NC}"
    # Non-interactive mode - just warn
    echo -e "${YELLOW}Proceeding with push to protected branch...${NC}"
fi

# All checks passed!
echo -e "${GREEN}‚úÖ All pre-push checks passed!${NC}"
echo -e "${GREEN}üöÄ Ready to push${NC}"

exit 0
